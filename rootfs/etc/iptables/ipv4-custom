*filter

# Accept incoming ICMP echo requests
-A ICMP-INPUT -p icmp --icmp-type echo-request -j ACCEPT

# Accept outgoing ICMP echo requests
-A ICMP-OUTPUT -p icmp --icmp-type echo-request -j ACCEPT

# Accept outgoing UDP connections
-A UDP-OUTPUT -p udp -j ACCEPT

# Accept outgoing TCP connections
-A TCP-OUTPUT -p tcp -j ACCEPT

# Accept connections to Transmission RPC and peer listening ports
-A TCP-INPUT -p tcp -m tcp --dport 9091 -j ACCEPT
-A TCP-INPUT -p tcp -m tcp --dport 51413 -j ACCEPT
-A UDP-INPUT -p udp -m udp --dport 51413 -j ACCEPT

COMMIT
